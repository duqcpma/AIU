package aiumain;

import java.util.Stack;

/**
 *
 * @author Adam
 */
public class AIUTreeIterator<K extends Comparable> {
  Stack<Pair<Node<K>,Boolean>> stack = new Stack<Pair<Node<K>,Boolean>>();
  
  private boolean flag = false;
  private Node<K> node = null;
  public AIUTreeIterator(AIUTree tree){
    node = tree.root;
    Pair<Node<K>,Boolean> pair = new Pair<Node<K>,Boolean>(node,true);
    stack.push(pair);
  }
  
  public boolean hasNext(){
    return !stack.empty();
  }
  
  public Node<K> next(){
    Pair<Node<K>,Boolean> pair = stack.pop();
    if(pair.second == true){
      pair.second = false;
      stack.push(pair);
      if(pair.first.left != null){
        Pair<Node<K>,Boolean> pair2 = new Pair<Node<K>,Boolean>(pair.first.left,true);
        stack.push(pair2);
      }
      return this.next();
    }
    else if(pair.second == false && pair.first.right != null){
        Pair<Node<K>,Boolean> pair3 = new Pair<Node<K>,Boolean>(pair.first.right,true);
        stack.push(pair3);
        return pair.first;
      }
    else 
      return pair.first;
    }
  
    
}
